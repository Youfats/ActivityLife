<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:onClick="jumpToSecondActivity"
        android:text="Jump To Two" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:onClick="jumpToSingleTopActivity"
        android:text="打开singleTopActivity" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:onClick="jumpToSingleTaskActivity"
        android:text="再打开singleTask MainActivity" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:onClick="jumpToSingleInstanceActivity"
        android:text="打开singleInstanceActivity" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:onClick="jumpToImplicitIntentActivity"
        android:text="隐式意图打开Activity" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:onClick="jumpToSaveInstanceStateActivity"
        android:text="打开测试saveInstanceState" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:onClick="jumpToFragmentLifeActivity"
        android:text="打开测试FragmentLifeActivity" />
</LinearLayout>